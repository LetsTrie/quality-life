<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Professionals List</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        />
        <style>
            body {
                padding: 10px;
                max-width: 100vw;
                overflow-x: hidden;
            }
            .table-container {
                overflow-x: auto;
                max-width: 100%;
            }
            h1 {
                text-align: center;
                font-size: 1.8rem;
                margin-bottom: 15px;
            }
            .approved-text {
                color: green;
                font-weight: bold;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Professionals</h1>
            <div class="table-container">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Account Status</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Designation</th>
                            <th>BMDC</th>
                            <th>Batch</th>
                            <th>Profession</th>
                            <th>Workplace</th>
                            <th>Zila</th>
                            <th>Upazila</th>
                            <th>Union</th>
                            <th>Telephone</th>
                            <th>Specialization Area</th>
                            <th>Experience</th>
                            <th>Fee</th>
                            <th>Education Qualification</th>
                            <th>Max Client per Week</th>
                            <th>Average Client per Week</th>
                            <th>Reference</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% profs.forEach(prof => { %>
                        <tr>
                            <td>
                                <% if (!prof.isVerified) { %>
                                <button
                                    class="btn btn-primary btn-sm approve-btn"
                                    data-id="<%= prof._id %>"
                                >
                                    Approve
                                </button>
                                <% } else { %>
                                <span class="approved-text">Approved</span>
                                <% } %>
                            </td>
                            <td><%= prof.name %></td>
                            <td><%= prof.email %></td>
                            <td><%= prof.gender %></td>
                            <td><%= prof.designation || '-' %></td>
                            <td><%= prof.bmdc || '-' %></td>
                            <td><%= prof.batch || '-' %></td>
                            <td><%= prof.profession %></td>
                            <td><%= prof.workplace || '-' %></td>
                            <td><%= prof.zila %></td>
                            <td><%= prof.upazila %></td>
                            <td><%= prof.union || '-' %></td>
                            <td><%= prof.telephone || '-' %></td>
                            <td><%= prof.specializationArea || '-' %></td>
                            <td><%= prof.experience || '-' %></td>
                            <td><%= prof.fee || '-' %></td>
                            <td><%= prof.eduQualification || '-' %></td>
                            <td><%= prof.maxClient || '-' %></td>
                            <td><%= prof.avgClient || '-' %></td>
                            <td><%= prof.ref || '-' %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <script src="/scripts/approve-professionals.js"></script>
    </body>
</html>
